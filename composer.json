{
    "name": "spatial/cli",
    "description": "CLI tools for Spatial Framework - code generators, migrations, and development utilities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kofi Owusu-Afriyie",
            "email": "kofi@aiira.co"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatial/core": "^4.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Spatial\\Cli\\": "src/"
        }
    },
    "bin": [
        "bin/spatial"
    ],
    "scripts": {
        "lint": "phpcs --standard=PSR12 src/",
        "lint-fix": "phpcbf --standard=PSR12 src/",
        "analyze": "phpstan analyse src/ --level=5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}